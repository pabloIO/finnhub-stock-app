{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./*"],
      "tests": ["./tests/*"],
      "@components/*": ["./src/components/*"],
      "@api/*": ["./src/api/*"],
      "@navigation/*": ["./src/navigation/*"],
      "@models/*": ["./src/models/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@context/*": ["./src/context/*"],
      "@data/*": ["./src/data/*"],
      "@assets/*": ["./assets/*"]
    }
  }
}
